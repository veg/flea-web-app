<div id="seq">
  <div class="panel-group" id="accordion">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h5 class="panel-title">
          <a data-toggle="collapse" data-parent="#accordion" href="#_select_aa_display" class="fill-div">
            Select Sequences
          </a>
        </h5>
      </div>

      <div id="_select_aa_display" class="panel-collapse collapse">
        <div class="panel-body">
          {{filter-widget content=observedSequences name="Sequence Selector" selected=selectedSequences displayName="id"}}
        </div>
      </div>
    </div>

    <div class="panel panel-default">
      <div class="panel-heading">
        <h5 class="panel-title">
          <a data-toggle="collapse" data-parent="#accordion" href="#_main_aa_display" class="fill-div">
            Display Sequences <span class='badge'>{{selectedSequences.length}}</span> <span class='badge'>{{selectedCopyNumber}}</span>
          </a>
        </h5>
      </div>

      <div id="_main_aa_display" class="panel-collapse collapse in">
        <div class="panel-body">
          <div class = "row">
            <div class = "col-md-12">
              <div class="input-group input-group-sm">
                {{sequence-range-controls rangeStart=rangeStart rangeStop=rangeStop
                minCoord=minCoord maxCoord=maxCoord
                predefinedRegions=predefinedRegions
                }}
                <span class="input-group-addon">
                  Collapse
                  {{input type="checkbox" name="collapseSeqs" checked=collapseSeqs}}
                </span>
                <span class="input-group-addon">
                  Mask unchanged
                  {{input type="checkbox" name="maskUnchanged" checked=maskUnchanged}}
                </span>
                <span class="input-group-addon">
                  Mark positively selected sites
                  {{input type="checkbox" name="markPositive" checked=markPositive}}
                </span>
              </div>
            </div>
          </div>
          <br>
          <div class = "row">
            <div class = "col-md-12">
              {{sequence-viewer inputSequences=selectedSequences
                  rangeStart=rangeStart rangeStop=rangeStop mrca=mrca
                  collapseSeqs=collapseSeqs
                  maskUnchanged=maskUnchanged
                  markPositive=markPositive
                  refCoords=hxb2Coords
                  positiveSelection=positiveSelection
              }}
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
