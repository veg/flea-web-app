<div class="input-group input-group-sm">
  <div class="input-group-btn">
    <button {{action "moveRange" -5}} type="button" class="btn btn-default btn-sm" title="Jump left">
      <i class="fa fa-fast-backward" ></i>
    </button>
  </div>
  <div class="input-group-btn">
    <button {{action "moveRange" -1}} type="button" class="btn btn-default btn-sm" title="Move left">
      <i class="fa fa-backward" ></i>
    </button>
  </div>
  <span class="input-group-addon">From</span>
  {{input type="number" class="form-control" value=rangeStart placeholder="HXB2 coordinate (e.g. 160)" autofocus="autofocus"}}
  <span class="input-group-addon">To</span>
  {{input type="number" class="form-control" value=rangeStop placeholder="HXB2 coordinate (e.g. 200)" autofocus="autofocus"}}
  <div class="input-group-btn">
    <button {{action "moveRange" 1}} type="button" class="btn btn-default btn-sm" title="Move right">
      <i class="fa fa-forward" ></i>
    </button>
  </div>
  <div class="input-group-btn">
    <button {{action "moveRange" 5}} type="button" class="btn btn-default btn-sm" title="Jump right">
      <i class="fa fa-fast-forward" ></i>
    </button>
  </div>
  <div class="input-group-btn">
    <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown">Predefined
      <span class="caret"></span></button>
    <ul class="dropdown-menu">
      TODO
    </ul>
  </div>
</div>
